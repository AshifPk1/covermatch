<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="policy_quoatation_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="odx_crm_lead.external_layout_standard">
                        <div class="page">
                            <h1>
                                <span t-field="o.name"/>
                            </h1>
                        <br/>
                        <table>
                            <tr>
                                <td>Customer</td>
                                <td/>
                                <td>
                                    <span t-field="o.partner_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Delivery Address</td>
                                <td/>
                                <td>
                                    <span t-field="o.partner_shipping_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Insurance Category</td>
                                <td/>
                                <td>
                                    <span t-field="o.insurence_category"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Vehicle</td>
                                <td/>
                                <td>
                                    <span t-field="o.vehicle_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Model Year</td>
                                <td/>
                                <td>
                                    <span t-if="o.vehicle_id" t-field="o.vehicle_id.year"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Value</td>
                                <td/>
                                <td>
                                    <span t-if="o.vehicle_id" t-field="o.vehicle_id.estimated_price_new_max"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Policy Start Date</td>
                                <td/>
                                <td>
                                    <span t-field="o.premium_date_from"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Insurance Company</td>
                                <td/>
                                <td>
                                    <span t-field="o.partner_invoice_id"/>
                                </td>
                            </tr>
                        </table>
                            <br/>
                        <table class="table-bordered mt32">
                            <tr>
                                <th>Description</th>
                                <th>Amount In AED</th>
                            </tr>
                            <!--                            <tr>-->
                            <!--                                <td>Base Premium</td>-->
                            <!--                                <td></td>-->
                            <!--                            </tr>-->
                            <t t-foreach="o.order_line"
                               t-as="line">
                                <tr>
                                    <td>
                                        <span t-esc="line.product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>

                            <!--                            <tr>-->
                            <!--                                <td>VAT</td>-->
                            <!--                                <td></td>-->
                            <!--                            </tr>-->
                            <tr>
                                <th>Total Premium In AED</th>
                                <td>
                                    <span t-field="o.amount_total"/>
                                </td>
                            </tr>
                        </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>