<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="benefits_form_view">
            <field name="name">benefits.view.form</field>
            <field name="model">res.benefits</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <!--                                <field name="excess_amount"/>-->
                            <field name="help_note"/>
                            <field name="is_optional"/>
                            <field name="additional_premium" attrs="{'invisible': [('is_optional', '!=', True)]}"/>
                            <field name="is_included"/>
                            <field name="is_excluded"/>
                            <field name="primary_benefit"/>
                            <field name="product_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="benefits_tree_view">
            <field name="name">benefits.view.form</field>
            <field name="model">res.benefits</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="display_name"/>
                    <!--                                <field name="excess_amount"/>-->
                    <field name="help_note"/>
                    <field name="is_optional"/>
                    <field name="is_included"/>
                    <field name="is_excluded"/>
                    <field name="primary_benefit"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_benefits">
            <field name="name">Benefits</field>
            <field name="res_model">res.benefits</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first item
                </p>
            </field>
        </record>
        <menuitem name="Benefits" id="action_benefits_menu" action="action_benefits"
                  parent="odx_uae_car_valuation.uae_vehicles"/>
    </data>
</odoo>